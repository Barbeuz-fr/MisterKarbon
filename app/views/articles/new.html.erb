<div class="container">

  <h5>Add a new article</h5>

  <%= simple_form_for [ @article ] do |f| %>
    <%= f.input :title %>
    <%= f.input :header %>
    <%= f.input :text %>
    <%= f.input :category %>
    <%= f.input :author %>
    <%= f.submit "Publish the article", class: "btn btn-primary" %>
  <% end %>

</div>
