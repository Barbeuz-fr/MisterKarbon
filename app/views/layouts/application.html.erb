<!DOCTYPE html>
<html>
  <head>
    <title>KarbonChain | The carbon accounting platform for your company</title>
    <%= favicon_link_tag 'green.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/navbar' if params[:action] == 'home' %>
    <%= render 'shared/sidebar' if @sidebar_show %>

    <%= render 'shared/flashes' %>
    <%= render 'shared/project-create-1' if @project_create_1_nav %>
    <%= render 'shared/project-create-2' if @project_create_2_nav %>
    <%= render 'shared/project-create-3' if @project_create_3_nav %>

  <% if params[:action] == 'home' %>
    <div class="content-wrapper">
       <%= yield %>
    </div>
      <% else %>
    <div class="content-wrapper siderender">
       <%= yield %>
    </div>
      <% end %>


    <%= render 'shared/footer' %>
  </body>
</html>
