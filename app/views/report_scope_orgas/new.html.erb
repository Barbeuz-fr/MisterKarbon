<div class="container">
  <div class="d-flex justify-content-between">
    <%= link_to "Previous", report_report_scopes_path(params[:report_id]), class:"btn btn-outline-secondary mt-3" %>
    <%= link_to "Next", report_report_scope_orga_users_path(params[:report_id]), class:"btn btn-primary mt-3" %>
  </div>
</div>


<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <h4>Modules selected by business unit</h4>
      <h5>Project: <%= @report.name %> - <%= @report.year %> </h5>
    </div>
    <div class="col-4 text-center">
      <h4>Your Selected Modules</h4>
    </div>
  </div>
</div>



<div class="container mt-3">
  <div class="row">
    <div class="col-4">
      <ul>
        <% @report.report_scopes.each do |report_scope| %>
          <li>
            <%= report_scope %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-4 bg-white rounded">
      <div class="tab-content pt-3" id="pills-tabContent">
        <% @orgas.each do |orga| %>
          <% unless @report_scope_orgas.find_by(orga_id: orga.id).present? %>
            <div class="tab-pane fade" id="pills-<%= orga.id %>" role="tabpanel" aria-labelledby="pills-<%= orga.id %>-tab">
              <button type="button" class="btn btn-primary col-12" data-toggle="modal" data-target="#staticBackdrop<%= orga.name.gsub(" ", "") %>">
                Add a module
              </button>
              <%#= render 'shared/modal-report-scope-orga', orga: orga %>
            </div>
          <% end %>
        <% end %>


        <% @report_scope_orgas.group_by(&:orga).each do |orga, array| %>
          <div class="tab-pane fade" id="pills-<%= orga.id %>" role="tabpanel" aria-labelledby="pills-<%= orga.id %>-tab">
            <% array.each do |r| %>
              <div class="row">
                <div class="col-10">
                  <p class="text-left"><%= r.report_scope.emission_module.name %> </p>
                </div>
                <div class="col-2">
                 <%#= link_to "ðŸ—‘", report_scope_orga_path(r.id), method: :delete, data: { confirm: "Are you sure?" } %>
                 <%= link_to "ðŸ—‘", report_report_scope_orga_path(@report.id, r.id), method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
                </div>
              </div>
            <% end %>
            <p>
              <button type="button" class="btn btn-primary col-12" data-toggle="modal" data-target="#staticBackdrop<%= orga.name.gsub(" ", "") %>">
                Add a module
              </button>
            </p>
            <%#= render 'shared/modal-report-scope-orga', orga: orga %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>













