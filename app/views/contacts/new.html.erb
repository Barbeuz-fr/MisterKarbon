<div class="banner-contact"
     style="background-image: linear-gradient(rgba(255,255,255,0.2),rgba(255,255,255,0)),
            url(https://res.cloudinary.com/dkybxjjy2/image/upload/v1586855718/KC-homepage-banner_dodnwh.png);">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
        <div class="pt-1">
          <h5>Des questions ? Envie d'une démo ? <br>Dites-nous tout !</h5>
          <%= form_for(@contact) do |f| %>
            <div class="field mb-3 d-flex justify-content-between">
              <%= f.text_field :name, placeholder: "Votre nom", style: 'width:35%;', class: "form-control" %>
              <%= f.text_field :email, placeholder: "Votre email", style: 'width:60%', class: "form-control" %>
            </div>
            <div class="field mb-3">
              <%= f.text_area :message, placeholder: "Votre message", style: 'width:100%; height: 20vh;', class: "form-control"  %>
            </div>
            <div class="field mb-3">
              <%= check_box_tag(:newsletter) %>
              <%= f.label "Je souhaite recevoir la newsletter", style: "color: white; text-shadow: 1px 1px 4px rgba(0,0,0,1);" %>

            </div>
            <div class="d-flex justify-content-between">
              <%= link_to "Retour à l'accueil", root_path, class: "btn btn-light"%>
              <div class="actions">
                <%= f.submit "Envoyer", class: 'btn btn-turquoise'%>
              </div>
            </div>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>


