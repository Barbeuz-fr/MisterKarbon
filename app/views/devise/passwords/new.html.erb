<div class="log-in-background">
  <div class="container d-flex justify-content-center">
    <div class="log-in-card col-12 col-sm-8 col-lg-6">

      <h2 class="text-center mb-4">Mot de passe oublié ?</h2>
      <p class="small">Veuillez entrer votre email de connexion pour recevoir la procédure de réinitialisation de votre mot de passe.</p>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Réinitialiser", class: "btn btn-turquoise mt-3 mb-5" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
