<div class="log-in-background">
  <div class="container d-flex justify-content-center">
    <div class="log-in-card col-12 col-sm-8 col-lg-6">
    <h2 class="text-center mb-4">Accédez à votre espace</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "new-log-in-form" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>

          <%= f.button :submit, "Je me connecte", class: "btn btn-turquoise mt-3 mb-5" %>

      <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
