<div class="container">
  <h1> list of all your reports</h1>
  <%= link_to "Create new project",
              "#",
              class: "btn btn-ghost",
              "data-toggle" => "modal",
              "data-target" => "#exampleModalCenter"%>
  <% @reports.each do |report| %>
    <div class="card-product">
      <%= link_to report_path(report) do %>
       <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <% end %>
      <div class="card-product-infos">
        <h2><%= report.name %></h2>
        <h2><%= report.year %></h2>
        <p>Product description with <strong>relevant info</strong> only.</p>
      </div>
    </div>
  <% end %>
</div>

<!-- Modal Creation de report  -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Create new Project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for (@report) do |f| %>
            <%= f.input :name, label_html: {class: "label_new"} %>
            <%= f.input :year, label_html: {class: "label_new"} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Create your report", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
