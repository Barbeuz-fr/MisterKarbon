<!-- nouvelles cards -->
<%= link_to "Create new report",
            "#",
            class: "btn btn-primary btn-lg mt-3 ml-3",
            "data-toggle" => "modal",
            "data-target" => "#exampleModalCenter"%>
<div class="container">
  <div class="row">
    <% @reports.each do |report| %>
      <%= link_to report_path(report), class: "col-6 mb-3" do %>
        <div class="card" style="height: 100%;">
          <% if report.photo.attached? %>
            <%= cl_image_tag report.photo.key, crop: :fill, class: 'img-report-card' %>
          <% else %>
            <%= image_tag "clouds-default-img.png", alt: "default-report-img", class: 'img-report-card'%>
          <% end %>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div class="d-flex">
                <h2><%= report.name %></h2><span> - </span>
                <h3><%= report.year %></h3>
              </div>
              <div>
                <%= button_to "üóë", report, method: :delete, data: {confirm: "Are you sure?"}, class: 'delete-button'%>
              </div>
            </div>
            <div class="card-text">
              <% report.report_scopes.each do |report_scope| %>
                <p>‚òÅÔ∏é <%= report_scope.emission_module.name %></p>
                  <% report_scope.report_scope_orgas.each do |report_scope_orga| %>
                    <p>üè≠ <%= report_scope_orga.orga.name %></p>
                  <% end  %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Modal Creation de report  -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Add new report</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for (@report) do |f| %>
            <%= f.input :name, label_html: {class: "label_new"} %>
            <%= f.input :year, as: :date,  discard_day: true, discard_month: true,  label_html: {class: "label_new"} %>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Create your report", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
