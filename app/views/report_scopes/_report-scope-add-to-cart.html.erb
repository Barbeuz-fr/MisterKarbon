<div class="selected-modules">
  <% @module_scopes.each do |module_scope| %>
    <% if ReportScope.new(emission_module_id: module_scope.id, report_id: params[:report_id]).valid? == false %>
        <div class="flash-module-mini">
          <div class="flash-module-mini-info">
            <p class="card-title"><%= module_scope.name %></p>
          </div>

          <% report_scope = @report.report_scopes.find_by(emission_module_id: module_scope.id) %>

            <%= link_to "âž–",
            report_scope_path(report_scope, report_id: params[:report_id]),
            method: :delete, class:"flash-module-mini-info-minus", remote: true %>

        </div>
    <% end %>
  <% end %>
</div>
