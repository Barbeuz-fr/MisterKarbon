function refreshCard(innerHTML) {
  const card = document.getElementById("<%= @report_scope.emission_module.id %>");
  card.outerHTML = innerHTML;
}

function addCard(innerHTML) {
// trouver la liste des cartes
const shoppingCart = document.querySelector(".selected-modules");
// inserer la carte du report scope cree
shoppingCart.outerHTML = innerHTML;
}

function addNext(innerHTML) {
const nextButton = document.getElementById("next-step");
nextButton.outerHTML = innerHTML;
}

refreshCard('<%= j render "report-scope-destroy", module_scope: @report_scope.emission_module %>')
addCard('<%= j render "report-scope-add-to-cart" %>')
addNext('<%= j render "report-scope-next-step" %>')
